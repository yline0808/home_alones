<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_address"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="주소" />

        <TextView
            android:id="@+id/textView_address_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="주소입니다." />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_dangi"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="단지명" />

        <TextView
            android:id="@+id/textView_dangi_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="단지단지" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_place"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="면적(㎡)" />
        <TextView
            android:id="@+id/textView_place_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="13" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_money_mon"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="월임대료" />

        <TextView
            android:id="@+id/textView_money_mon_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10000" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_money_bo"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="보증금" />

        <TextView
            android:id="@+id/textView_money_bo_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="8584000" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_count"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="모집호수" />

        <TextView
            android:id="@+id/textView_count_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10" />

    </LinearLayout>

</LinearLayout>